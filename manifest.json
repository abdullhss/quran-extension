{
  "manifest_version": 2,
  "name": "Quran extension",
  "version": "1.0",
  "description": "A simple Chrome extension",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://api.alquran.cloud/*"
  ],
  "content_security_policy": "script-src 'self' https://api.alquran.cloud/*; object-src 'self';",
  
  "permissions": ["background"],
  "background": { "scripts": ["background.js"] } 
}